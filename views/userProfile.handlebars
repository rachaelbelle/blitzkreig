<div id="profile">
  <div class="container userProfile">
    <div class="row">
      <div class="col-s12">
        <h1 class="marker">Blitzkreig! <img src="/images/tankProfileImg.png" alt="profile" class="profile"></h1>

        <div>
          {{#each blitzdb}}
          {{#if weather}}
          {{> widgets/weather-block }}
          {{/if}}
          {{/each}}
        </div>

        <div>
          {{#each blitzdb}}
          {{#if traffic}}
          {{> widgets/traffic-block}}
          {{/if}}
          {{/each}}
        </div>

        <div>
          {{#each blitzdb}}
          {{#if news}}
          {{> widgets/news-block}}
          {{/if}}
          {{/each}}
        </div>

        <div>
          {{#each blitzdb}}
          {{#if quote}}
          {{> widgets/quote-block}}
          {{/if}}
          {{/each}}
        </div>


      </div>
    </div>
  </div>
</div>

